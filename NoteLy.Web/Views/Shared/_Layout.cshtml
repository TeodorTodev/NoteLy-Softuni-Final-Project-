<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteLy.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Playlist/PlaylistSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Playlist/CreatePlaylist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Playlist/EditPlaylist.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Song/SongsSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Song/CreateSong.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Song/EditSong.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Comment/CommentSection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Comment/CreateComment.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Comment/EditComment.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LogInPartial.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LogIn.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SongControls/SongControls.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoteLy.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body style="background-image: url('/Resources/Background.jpg');">
    <div class="main">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/PlaylistSelection.js" asp-append-version="true"></script>
    <script src="~/js/LoadSongs.js" asp-append-version="true"></script>
    <script src="~/js/LoadComments.js" asp-append-version="true"></script>
    <script src="~/js/LoadDropDownPlaylists.js" asp-append-version="true"></script>
    <script src="~/js/LoadDropDownSongs.js" asp-append-version="true"></script>
    <script src="~/js/FormatSongDuration.js" asp-append-version="true"></script>
    <script src="~/js/PlaySong.js" asp-append-version="true"></script>
    <script src="~/js/SongControls.js" asp-append-version="true"></script>
    <script src="~/js/SearchPlaylist.js" asp-append-version="true"></script>
    <script src="~/js/SongSelection.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
