@model NoteLy.Web.ViewModels.Song.EditSongViewModel

<h2>Edit Song</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Duration"></label>
        <input asp-for="Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistNames">Artists (comma-separated)</label>
        <input asp-for="ArtistNames" class="form-control" />
        <span asp-validation-for="ArtistNames" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="FilePath"></label>
        <input asp-for="FilePath" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>

    <button type="submit">Save</button>
</form>

<a asp-controller="Home" asp-action="Index">Back</a>