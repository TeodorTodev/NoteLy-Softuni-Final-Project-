﻿@using NoteLy.Web.ViewModels.Playlist
@using Microsoft.AspNetCore.Identity
@using NoteLy.Data.Models
@model AddPlayListInputModel


<h2>Add a new Playlist</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name">Movie Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Playlist</button>
</form>

<a asp-controller="Home"  asp-action="Index">Back</a>